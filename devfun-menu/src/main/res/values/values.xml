<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Colors -->

    <color name="df_menu_white_normal">#ffffffff</color>
    <color name="df_menu_white_pressed">#ffededed</color>
    <color name="df_menu_white_selected">#fff2f2f2</color>
    <color name="df_menu_white_selected_pressed">#ffd6d6d6</color>
    <color name="df_menu_white_disabled">#88ffffff</color>

    <color name="df_menu_grey200_normal">#ffc8c8c8</color>
    <color name="df_menu_purple_200_normal">#CE93D8</color>
    <color name="df_menu_transparent_normal">#00000000</color>
    <color name="df_menu_black_transparent100_normal">#64000000</color>

    <color name="df_menu_white_transparent100_pressed">#64ffffff</color>
    <color name="df_menu_white_transparent100_selected">#64c3c3c3</color>

    <color name="df_menu_header_bottom_border">@color/df_menu_grey200_normal</color>
    <color name="df_menu_cog_background">@color/df_menu_purple_200_normal</color>

    <!-- Styles -->

    <style name="DfMenu"/>

    <style name="DfMenu.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/df_menu_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DfMenu.Header">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/df_menu_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/df_menu_item_header_bottom_border</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="DfMenu.Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/df_menu_white</item>
    </style>

    <style name="DfMenu.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/df_menu_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/df_menu_purple_200_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
